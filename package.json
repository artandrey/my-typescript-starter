{
  "name": "my-typescript-starter",
  "version": "1.0.0",
  "description": "Typescript starter for my projects",
  "scripts": {
    "start:dev": "tsc --watch",
    "test:dev": "vitest",
    "test": "vitest run",
    "lint": "eslint --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "build": "tsc"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add -p"
    ],
    "**/*.{ts,tsx}": "tsc-files --noEmit"
  },
  "keywords": [],
  "author": "Andrii Artemenko",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "eslint": "^9.14.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tsc-files": "^1.1.4",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.12.2",
    "vitest": "^2.1.6"
  }
}
